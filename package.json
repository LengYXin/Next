{
  "name": "root",
  "version": "0.0.5",
  "private": true,
  "workspaces": [
    "packages/client",
    "packages/weapp",
    "packages/www"
  ],
  "scripts": {
    "dev:www": "cd packages/www && npm start",
    "dev:h5": "cd packages/weapp && npm run dev:h5",
    "dev:weapp": "cd packages/weapp && npm run dev:weapp",
    "build:www": "cd packages/www && cross-env ES=uat npm run generate",
    "build:weapp": "cd packages/weapp && npm run build:weapp",
    "build:h5": "cd packages/weapp && npm run build:h5",
    "serve": "cd packages/www && npm run serve",
    "init": "lerna bootstrap",
    "docs": "docsify serve docs",
    "clean": "lerna clean",
    "clean-all": "npm run clean && rimraf node_modules",
    "publish": "lerna publish --skip-npm",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2",
    "webpack-bundle-analyzer": "^3.8.0"
  }
}
